extends ./layout

block content
    
    h1.
        #{title} 
    form(name="loginForm",method="post",action="/category/course/year/question", id="question", class="form-horizontal")
        div.form-group.row
            div.col-md-1
                p Question:
            div.col-md-4 
                input(type="text", placeholder="course name", name="question",class="form-control", id="question")
        div.form-group.row
            div.col-md-1
                p Answer:
            div.col-md-4 
                input(type="text", placeholder="course name", name="answer",class="form-control", id="answer")
        div.form-group.row
            div.col-md-1
                p Option:
            div.col-md-4 
                input(type="text", placeholder="course name", name="option",class="form-control", id="option")
        div.form-group.row
            div.col-md-1
                p Explanation:
            div.col-md-4 
                input(type="text", placeholder="course explanation", name="explanation",class="form-control", id="explanation")
        div.form-group.row
            div.col-md-1
                p Image:
            div.col-md-4 
                input(type="text", placeholder="course name", name="image",class="form-control", id="image")
        div.form-group.row
            div.col-md-1
                p CategoryID:
            div.col-md-4 
                select(name='categoryID' class="form-control")
                    each category in categories
                        option(value=category._id,) #{category.catName}
        div.form-group.row
            div.col-md-1
                p CourseID:
            div.col-md-4 
                select(name='courseID' class="form-control")
                    each course in courses
                        option(value=course._id) #{course.cozName}
        div.form-group.row
            div.col-md-1
                p YearID:
            div.col-md-4 
                select(name='yearID' class="form-control")
                    each year in years
                        option(value=year._id) #{year.yrName}    

        div.form-group.row
            div.col-md-1             
            div.col-md-4
                button#submit.btn-info.form-control(type="submit", value="Submit") submit
